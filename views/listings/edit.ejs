<% layout("layouts/boilerplate.ejs") %>
<div class="row">
    <!--    "offset-* moves columns to the right by a certain number of columns.
            Here, it has been used for centering column elements, primarily the form groups.      -->
    <div class="col-8 offset-2">
        <h3 class="my-4">Edit your Listing</h3>
        <form action="/listings/<%= listing._id %>?_method=PATCH" method="post">
            <!--    The form-group class groups form elements together with proper spacing.
                    The form-control class is applied to input elements to style them with Bootstrapâ€™s default design.     -->
            <div class="form-group mb-3">
                <label for="title">Title</label>
                <input type="text" value="<%= listing.title %>" id="title" class="form-control" name="listing[title]">
            </div>
            <div class="form-group mb-3">
                <label for="description">Description</label>
                <textarea id="description" class="form-control" name="listing[description]"><%= listing.description %></textarea>
            </div>
            <div class="form-group mb-3">
                <label for="image">Image Link</label>
                <input type="text" value="<%= listing.image %>" id="image" class="form-control" name="listing[image]">
            </div>
            <div class="form-group mb-3">
                <label for="price">Price</label>
                <input type="number" value="<%= listing.price %>" id="price" class="form-control" name="listing[price]">
            </div>
            <div class="row">
                <div class="form-group col-md-8 mb-3">
                    <label for="location">Location</label>
                    <input type="text" value="<%= listing.location %>" id="location" class="form-control" name="listing[location]">
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="country">Country</label>
                    <input type="text" value="<%= listing.country %>" id="country" class="form-control" name="listing[country]">
                </div>
            </div>
            <button class="btn btn-dark mt-4 mb-5 btn-edit">Edit</button>
        </form>
    </div>
</div>


